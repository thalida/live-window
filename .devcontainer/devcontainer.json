// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:2": {}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -i /workspaces/${localWorkspaceFolderBasename}/.devcontainer/postCreateCommand.sh",
	"postStartCommand": "bash -i /workspaces/${localWorkspaceFolderBasename}/.devcontainer/postStartCommand.sh",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				// Python Settings
				"python.venvPath": "/home/vscode/.cache/pypoetry/virtualenvs",
				"python.defaultInterpreterPath": "/home/vscode/.cache/pypoetry/virtualenvs/live-window-Qe1U5PF6-py3.12/bin/python",
				"python.testing.pytestPath": "/home/vscode/.cache/pypoetry/virtualenvs/live-window-Qe1U5PF6-py3.12/bin/pytest",
				"python.languageServer": "Pylance",
				"python.testing.unittestEnabled": true,
				"python.testing.pytestEnabled": true,
				"[python]": {
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": [
						"source.fixAll",
						"source.organizeImports"
					],
					"editor.defaultFormatter": "charliermarsh.ruff"
				}
			},
			"extensions": [
				"GitHub.copilot",
				"sleistner.vscode-fileutils",
				"charliermarsh.ruff",
				"ms-python.vscode-pylance",
				"yzhang.markdown-all-in-one"
			]
		}
	}
}
